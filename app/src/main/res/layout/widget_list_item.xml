                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center_vertical|end"-->
                <!--android:contentDescription="@string/subreddit_submission_thumbnail"-->
                <!--android:scaleType="fitCenter"/>-->

        <!--</LinearLayout>-->
