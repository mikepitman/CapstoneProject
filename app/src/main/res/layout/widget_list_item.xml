<LinearLayout
    android:id="@+id/widget_list_item_horiz_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <!--android:layout_marginEnd="1dp"-->
    <!--android:layout_marginStart="1dp"-->

    <LinearLayout
        android:id="@+id/widget_list_item_score_vert_layout"
        android:layout_width="@dimen/layout_none"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/widget_list_item_score"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:textColor="@color/white"/>

        <!-- delimiter between items-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/offBlack"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget_list_item_details_vert_layout"
        android:layout_width="@dimen/layout_none"
        android:layout_height="wrap_content"

        android:layout_weight="6"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/widget_list_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:maxLines="2"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widget_list_item_subreddit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_weight="2"
                android:textColor="@color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

            <TextView
                android:id="@+id/widget_list_item_author"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="3"
                android:textColor="@color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
        </LinearLayout>

        <!-- delimiter between items-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/offBlack"/>

    </LinearLayout>
</LinearLayout>