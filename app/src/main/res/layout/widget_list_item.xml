            <!--android:layout_width="@dimen/layout_none"-->
            <!--android:layout_height="fill_parent"-->
            <!--android:layout_weight="2"-->
            <!--android:gravity="center_vertical|end"-->
            <!--android:orientation="vertical">-->

            <!--<ImageView-->
                <!--android:id="@+id/thumbnail"-->
