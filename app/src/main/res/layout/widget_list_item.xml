<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/widget_list_item_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/card_layout_margin"
    android:fitsSystemWindows="true"
    card_view:cardBackgroundColor="@color/offBlack"
    card_view:cardCornerRadius="@dimen/card_corner_radii">

    <LinearLayout

        android:id="@+id/widget_list_item_horiz_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:baselineAligned="false"
        android:orientation="horizontal">
        <!--android:layout_marginEnd="1dp"-->
        <!--android:layout_marginStart="1dp"-->

        <LinearLayout
            android:id="@+id/widget_list_item_score_vert_layout"
            android:layout_width="@dimen/layout_none"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_list_item_score"
                style="@style/submission_text.supplementary"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/padding_none"
                android:paddingEnd="@dimen/padding_none"
                android:textAlignment="center"/>
            <!-- layout_width and layout_height set in style, layout_height overridden here as required -->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/widget_list_item_details_vert_layout"
            android:layout_width="@dimen/layout_none"
            android:layout_height="fill_parent"

            android:layout_weight="6"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_list_item_subreddit"
                style="@style/submission_text.supplementary"
                android:layout_gravity="top"/>

            <TextView
                android:id="@+id/widget_list_item_title"
                style="@style/submission_text"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/widget_list_item_author"
                style="@style/submission_text.supplementary"
                android:layout_gravity="bottom"/>
        </LinearLayout>

        <!--<LinearLayout-->
