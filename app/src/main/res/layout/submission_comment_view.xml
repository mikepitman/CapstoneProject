<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <TextView
        android:id="@+id/comment_spacer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/comment_details_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/comment_author"
          style="@style/submission_text.supplementary"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="start"
          android:paddingStart="@dimen/padding_none"
          android:paddingEnd="@dimen/padding_none"/>

      <TextView
          android:id="@+id/comment_points"
          style="@style/submission_text.supplementary"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="end"/>
    </LinearLayout>

    <TextView
        android:id="@+id/submission_comment"
        style="@style/submission_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_none"
        android:paddingEnd="@dimen/padding_none"/>

  </LinearLayout>

</android.support.constraint.ConstraintLayout>