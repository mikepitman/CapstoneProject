<?xml version="1.0" encoding="utf-8"?>
<manifest package="pitman.co.za.readerforreddit"
          xmlns:android="http://schemas.android.com/apk/res/android">

  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

  <application
      android:allowBackup="true"
      android:hardwareAccelerated="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:supportsRtl="true"
      android:theme="@style/Theme.reader_for_reddit">

    <!-- ///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////// -->
    <activity android:name=".MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <!-- ///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////// -->
    <activity
        android:name=".ViewSubredditActivity"
        android:parentActivityName=".MainActivity"
        android:launchMode="singleTop">
      <!-- https://stackoverflow.com/questions/20819019/why-is-ondestroy-always-called-when-returning-to-parent-activity -->

      <meta-data
          android:name="android.support.PARENT_ACTIVITY"
          android:value="pitman.co.za.readerforreddit.MainActivity"/>
    </activity>
    <!-- ///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////// -->
    <activity
        android:name=".ViewSubmissionActivity"
        android:parentActivityName=".ViewSubredditActivity">

      <meta-data
          android:name="android.support.PARENT_ACTIVITY"
          android:value="pitman.co.za.readerforreddit.ViewSubredditActivity"/>
    </activity>
    <!-- ///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////// -->
    <activity
        android:name=".SelectSubredditsActivity"
        android:parentActivityName=".MainActivity">

      <meta-data
          android:name="android.support.PARENT_ACTIVITY"
          android:value="pitman.co.za.readerforreddit.MainActivity"/>
    </activity>
    <!-- ///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////// -->
    <receiver android:name=".widget.ReaderForRedditWidgetProvider">
      <intent-filter>
        <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
      </intent-filter>

      <meta-data
          android:name="android.appwidget.provider"
          android:resource="@xml/reddit_reader_widget_provider_info"/>
    </receiver>
    <!-- ///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////// -->
    <service
        android:name=".widget.ReaderForRedditWidgetRemoteViewsService"
        android:exported="false"
        android:permission="android.permission.BIND_REMOTEVIEWS"/>
  </application>

</manifest>